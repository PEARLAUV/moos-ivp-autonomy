//---------------
ProcessConfig = iPEARL
{
  AppTick    = 10
  CommsTick  = 10
  
  PORT              = /dev/ttyACM0
  BAUDRATE          = 115200
  PREFIX            = IMU
  HEADING_OFFSET    = 0.0
  PUBLISH_RAW       = true
}

//-------------------
ProcessConfig = iChargeController
{
  AppTick     = 1
  CommsTick   = 1

  PORT           = /dev/tty1
  BAUDRATE       = 115200
  PREFIX         = CHG
  READ_DATA      = false
  MAX_THRUST     = 100.0
  MAX_RUDDER     = 50.0
}

//--------------------------------
ProcessConfig = uSolarHeading
{
  AppTick     = 5
  CommsTick   = 5
  
  PREFIX          = SOLAR
  HEADING_OFFSET  = 0.0
  PUBLISH_ANGLES  = true
}
